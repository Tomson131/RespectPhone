<Window x:Class="RespectPhone.InMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RespectPhone"
        mc:Ignorable="d"
                Title="IncomingMessage"  Height="220" Width="300" ResizeMode="NoResize" Background="Black" WindowStyle="None" >
    <Grid>
        <Grid MouseDown="Grid_MouseDown" VerticalAlignment="Top" Height="20" Background="#FF303030">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Width="20" Height="20" Background="Red" Cursor="Hand" MouseDown="Border_MouseDown" CornerRadius="10">
                    <Label Padding="0" HorizontalAlignment="Center">x</Label>
                </Border>
            </StackPanel>
        </Grid>
        <StackPanel Margin="0,20,0,0">
            <TextBlock Name="Text" TextWrapping="Wrap" MaxWidth="250" Background="Transparent" HorizontalAlignment="Center" Foreground="White" FontSize="14" Margin="10,25,10,0" FontWeight="Bold"></TextBlock>            
        </StackPanel>
    </Grid>
</Window>

